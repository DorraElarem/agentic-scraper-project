# 🚂 Configuration Railway - Variables d'environnement
# Ces variables seront automatiquement injectées par Railway

# 🌍 Environnement
APP_ENV=production
DEBUG=false

# 🗄️ Base de données (Railway PostgreSQL - auto-générée)
# DATABASE_URL sera automatiquement fournie par Railway
# Format: postgresql://user:password@host:port/database

# 🔄 Redis (Railway Redis - auto-généré)  
# REDIS_URL sera automatiquement fournie par Railway
# Format: redis://host:port

# 🤖 Configuration Ollama
OLLAMA_HOST=http://ollama:11434
OLLAMA_TIMEOUT=60
ENABLE_LLM_ANALYSIS=true
OLLAMA_MODEL=tinyllama:latest

# 🕷️ Configuration Scraping
DEFAULT_DELAY=2.5
REQUEST_TIMEOUT=30
SCRAPE_MAX_RETRIES=3
MAX_CONTENT_LENGTH_KB=5000
SCRAPE_USER_AGENT=Mozilla/5.0 (compatible; AgenticScraper/1.0)

# 🔄 Configuration Celery (utilise REDIS_URL)
CELERY_ACCEPT_CONTENT=json
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC
CELERYD_PREFETCH_MULTIPLIER=1

# 🐍 Configuration Python
PYTHONUNBUFFERED=1
PYTHONPATH=/app

# 🌐 Configuration serveur
PORT=8000
HOST=0.0.0.0

# 📊 Monitoring
LOG_LEVEL=INFO